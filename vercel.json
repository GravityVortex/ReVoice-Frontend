{
  "buildCommand": "pnpm build --webpack",
  "installCommand": "pnpm install --frozen-lockfile",
  "framework": "nextjs",
  "cleanUrls": true,
  "trailingSlash": false,
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=4096",
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },
  "functions": {
    "src/app/api/video-convert/**/*.ts": {
      "maxDuration": 60,
      "memory": 2048
    },
    "src/app/api/video-task/**/*.ts": {
      "maxDuration": 60,
      "memory": 2048
    },
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    },
    "src/app/api/ai/**/*.ts": {
      "maxDuration": 60
    },
    "src/app/api/payment/**/*.ts": {
      "maxDuration": 30
    },
    "src/app/api/storage/**/*.ts": {
      "maxDuration": 30
    }
  },
  "crons": []
}
